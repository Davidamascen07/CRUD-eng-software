{
  "name": "crud-app-backend",
  "version": "1.0.0",
  "description": "Backend para aplicação CRUD com SQLite (padrão) e MySQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start-sqlite": "set USE_SQLITE=true&& node server.js",
    "start-mysql": "set USE_SQLITE=false&& node server.js",
    "dev-sqlite": "set USE_SQLITE=true&& nodemon server.js",
    "dev-mysql": "set USE_SQLITE=false&& nodemon server.js",
    "dev-win": "set USE_SQLITE=true&& nodemon server.js",
    "test": "set USE_SQLITE=true&& node server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mysql2": "^2.3.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}
